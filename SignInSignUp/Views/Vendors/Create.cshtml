@model SignInSignUp.Models.VendorCreate
@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/AddVendor.css" />
</head>
<body style="background-color: #F8F3FF ">
    @using (Html.BeginForm("Create", "Vendors", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="main_container">
            <div class="container">
                <div class="card">
                    <h2>Add New Vendor: @Session["UserID"]</h2>

                    <div class="form-group-1">
                        @Html.LabelFor(model => model.vendorName, new { @class = "label" })
                        @Html.TextBoxFor(model => model.vendorName, new { @class = "input-field", @required = "required" })
                        @Html.ValidationMessageFor(model => model.vendorName)
                    </div>

                    <div class="form-group-1">
                        @Html.LabelFor(model => model.name, new { @class = "label" })
                        @Html.TextBoxFor(model => model.name, new { @class = "input-field", id = "name", @required = "required" })
                        @Html.ValidationMessageFor(model => model.name)
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.phone, new { @class = "label" })
                            @Html.TextBoxFor(model => model.phone, new { @class = "input-field", @required = "required", id = "phone" })
                            @Html.ValidationMessageFor(model => model.phone)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.email, new { @class = "label" })
                            @Html.TextBoxFor(model => model.email, new { @class = "input-field" , id = "email" })
                            @Html.ValidationMessageFor(model => model.email)
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.gstin, new { @class = "label" })
                            @Html.TextBoxFor(model => model.gstin, new { @class = "input-field", id = "gstin" })
                            @Html.ValidationMessageFor(model => model.gstin)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.designation, new { @class = "label" })
                            @Html.TextBoxFor(model => model.designation, new { @class = "input-field", id = "designation" })
                            @Html.ValidationMessageFor(model => model.designation)
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.country, new { @class = "label" })
                            @Html.TextBoxFor(model => model.country, new { @class = "input-field", id = "country", value = "India", required = "required" })
                            @Html.ValidationMessageFor(model => model.country)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.state, new { @class = "label", @required = "required" })
                            <select class="select-field" id="state" name="state" required>
                                <option value="">Select State</option>
                                <option value="state1">State 1</option>
                                <option value="state2">State 2</option>
                                <option value="state3">State 3</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.city, new { @class = "label" })
                            @Html.TextBoxFor(model => model.city, new { @class = "input-field", @required = "required", id = "city" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.pincode, new { @class = "label" })
                            @Html.TextBoxFor(model => model.pincode, new { @class = "input-field", id ="pincode"})
                        </div>
                    </div>
                    <div class="form-group-1">
                        @Html.LabelFor(model => model.address, new { @class = "label" })
                        @Html.TextBoxFor(model => model.address, new { @class = "input-field", id = "address" })
                    </div>
                    <button class="btn btn-lg btn-primary" type="submit">Submit</button>
                </div>
            </div>
        </div>
    }
</body>
</html>