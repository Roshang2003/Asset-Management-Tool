@model SignInSignUp.Models.ProductDetail
@{
    ViewBag.Title = "Details";
}


<!DOCTYPE html>
<html>
<head>
    <script src="https://kit.fontawesome.com/b4f739a393.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .main_container {
            margin: 2px 0px 2px 15px;
            text-align: center;
            /*background-color: ;*/
        }

        .add_new_vendor {
            margin-left: 80%;
            margin-bottom: 20px;
        }

        td {
            text-align: left;
        }

        .lebels {
            font-weight: bold;
        }
        .custom-table {
            border-color: #EDE4FF; /* Replace with the desired color */
        }
    </style>
</head> 

<body style="background-color: #F8F3FF" >
    <div class="main_container">
        <h2 class=" mb-4">Product</h2>
        <a class="btn btn-secondary add_new_vendor" href="@Url.Action("Index", "Products")" role="button">Back To List</a>
        <table class="table table-bordered custom-table">

            <tr class="row">
                <td class="col" style="padding:2em 0 2em 2em">
                    <table>
                        <tr>
                            <td>
                                <p class="lebels">Product Name :</p>
                            </td>
                            <td style="padding-left: 3em;">
                                <p>@Model.ProductName</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="lebels">Product Manufacturer :</p>
                            </td>
                            <td style="padding-left: 3em;">
                                <p>@Model.Manufacturer</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="lebels">Type of Product :</p>
                            </td>
                            <td style="padding-left: 3em;">
                                <p>@Model.ProductType</p>
                            </td>
                        </tr>
                    </table>
                </td>


                <td class="col" style="padding:2em 0 2em 2em">
                    <table>
                        <tr>
                            <td style="width: 24%">
                                <p class="lebels">Product ID :</p>
                            </td>
                            <td style="padding-left: 0.5em;">
                                <p>@Model.ProductID</p>
                            </td>
                        </tr>
                        
                        <tr>
                            <td style="width: 24%">
                                <p class="lebels">Product Category :</p>
                            </td>
                            <td style="padding-left: 0.5em;">
                                <p>@Model.ProductCategory</p>
                            </td>
                        </tr>
                        
                        <tr>
                            <td style="width: 24%">
                                <p class="lebels">Description :</p>
                            </td>
                            <td style="padding-left: 0.5em; ">
                                <p>@Model.Description </p>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>


    </div>
</body>

</html>