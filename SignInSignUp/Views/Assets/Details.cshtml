@model SignInSignUp.Models.AssetDetails
@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <script src="https://kit.fontawesome.com/b4f739a393.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>

        .main_container {
            margin: 0 15px;
            text-align: center;
        }

        td {
            text-align: left;
        }

        .lebels {
            font-weight: bold;
        }

        .custom-table td {
            padding: 5px;
            border: none !important; /* Remove borders from all table cells and give it higher priority */
        }

        .table-parent {
            padding: 20px 0 10px 40px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: row;
        }

        .form-group{
            margin-bottom:13px;
        }
        .information {
            font-weight: bold;
            background-color: #F6F1FF;
            color: black;
            text-align: left;
            padding:15px 0 3px 15px ;
            
            box-shadow: 0px -10px 20px rgba(0, 0, 0, 0.1), 0px 10px 20px rgba(0, 0, 0, 0.1), -5px 0px 10px rgba(0, 0, 0, 0.1), 5px 0px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body style="background-color: #F8F3FF ">

    <div class="main_container">
        <h2 class=" mb-2 mt-3">Details</h2>

        <div class="top-button">
            <a class="btn btn-secondary add_new_vendor" href="@Url.Action("Index", "Assets")" role="button">Back To List</a>
        </div>

        <div class="information">
            <p>Basic Info</p>
        </div>

        <div class="table-parent">
            <div style="flex:1">
                <table class="table custom-table">
                    <tr>
                        <td style="width:35%">
                            <div class="form-group lebels">
                                Asset Name
                            </div>
                        </td>
                        <td style="padding-left: 1em; ">
                            <div>
                                @Model.AssetName
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:35%">
                            <div class="form-group lebels">
                                Product Category
                            </div>
                        </td>
                        <td style="padding-left: 1em;">
                            <div class="form-group">
                                @Model.ProductCategory
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:35%">
                            <div class="form-group lebels">
                                <div>
                                    Product
                                </div>
                            </div>
                        </td>
                        <td style="padding-left: 1em;">
                            <div class="form-group">
                                @Model.ProductName
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div style="flex:1">
                <table class="table custom-table">
                    <tr>
                        <td style="width: 24%">
                            <div class="form-group lebels">
                                Serial Number
                            </div>
                        </td>
                        <td style="padding-left: 0.5em;">
                            <div class="form-group">
                                @Model.SerialNumber
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td style="width: 24%">
                            <div class="form-group lebels">
                                Description
                            </div>
                        </td>
                        <td style="padding-left: 0.5em;">
                            <div class="form-group">
                                @Model.Description
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <br />

        <div class="information">
            <p>Additional Info</p>
        </div>

        <div class="table-parent">
            <div style="flex:1">
                <table class="table custom-table">
                    <tr>
                        <td style="width:35%">
                            <div class="lebels form-group">
                                Vendor
                            </div>
                        </td>
                        <td style="padding-left: 1em;">
                            <div class="form-group">
                                @Model.VendorName
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td style="width:35%">
                            <div class="lebels form-group">
                                Invoice
                            </div>
                        </td>
                        <td style="padding-left: 1em;">
                            <div class="form-group">
                                @if (!string.IsNullOrEmpty(Model.InvoiceFilePath))
                                {
                                    <a href="@Url.Action("DownloadInvoice", "Assets", new { fileName = Model.InvoiceFilePath })">Download Invoice</a>
                                }
                                else
                                { <p>N/A</p>
                                }
                            </div>
                        </td>
                    </tr>


                </table>
            </div>

            <div style="flex:1">
                <table>
                    <tr>
                        <td style="width: 24%">
                            <div class="form-group lebels">
                                Price
                            </div>
                        </td>
                        <td style="padding-left: 5.5em;">
                            <div class="form-group">
                                @Model.Price
                            </div>
                        </td>
                    </tr>


                </table>
            </div>
        </div>

    </div>
</body>

</html>

