@model SignInSignUp.Models.AssetDetails
@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <script src="https://kit.fontawesome.com/b4f739a393.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .body {
            background-color: #f1f1f1;
        }

        .main_container {
            margin: 2px 0px 2px 15px;
            text-align: center;
            /*background-color: ;*/
        }

        .add_new_vendor {
            margin-left: 80%;
            margin-bottom: 20px;
        }

        td {
            text-align: left;
        }

        .lebels {
            font-weight: bold;
        }

        .custom-table {
            border-color: #EDE4FF; /* Replace with the desired color */
        }
        .add_new_vendor {
            margin-left: 80%;
            margin-bottom: 20px;
        }

        .form-group{
            margin-bottom:13px;
        }
    </style>
</head>

<body style="background-color: #F8F3FF ">

    <div class="main_container">
        <h2 class=" mb-2 mt-3">Add New Asset</h2>
        <a class="btn btn-secondary add_new_vendor" href="@Url.Action("Index", "Assets")" role="button">Back To List</a>
        <table class="table table-bordered custom-table">
            <tr class="row levels">
                <td style="font-weight: bold; background-color: #F6F1FF">Basic Info</td>
            </tr>
            <tr class="row">
                <td class="col col-xs-12 col-sm-12 col-md-6" style="padding:2em 0 2em 2em">
                    <table>
                        <tr>
                            <td>
                                <div class="form-group lebels">
                                    Asset Name
                                </div>
                            </td>
                            <td style="padding-left: 3em;">
                                <div class="form-group">
                                    @Model.AssetName
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group lebels">
                                    Product Category
                                </div>
                            </td>
                            <td style="padding-left: 3em;">
                                <div class="form-group">
                                    @Model.ProductCategory
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group lebels">
                                    <div>
                                        Product
                                    </div>
                                </div>
                            </td>
                            <td style="padding-left: 3em;">
                                <div class="form-group">
                                    @Model.ProductName
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>


                <td class="col col-xs-12 col-sm-12 col-md-6" style="padding:2em 0 2em 2em">
                    <table>
                        <tr>
                            <td style="width: 24%">
                                <div class="form-group lebels">
                                    Serial Number
                                </div>
                            </td>
                            <td style="padding-left: 0.5em;">
                                <div class="form-group">
                                    @Model.SerialNumber
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td style="width: 24%">
                                <div class="form-group lebels">
                                    Description
                                </div>
                            </td>
                            <td style="padding-left: 0.5em; ">
                                <div class="form-group">
                                    @Model.Description
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>

        <table class="table table-bordered custom-table mt-5">
            <tr class="row levels">
                <td style="font-weight: bold; background-color: #F6F1FF">Additional Info</td>
            </tr>
            <tr class="row">
                <td class="col col-xs-12 col-sm-12 col-md-6" style="padding:2em 0 2em 2em">
                    <table>
                        <tr>
                            <td>
                                <div class="lebels form-group">
                                    Vendor
                                </div>
                            </td>
                            <td style="padding-left: 3em;" class="form-group">
                                <div class="form-group">
                                    @Model.VendorName
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <div>
                                    @*@Html.LabelFor(model => model.)*@
                                </div>
                            </td>
                            <td style="padding-left: 3em;">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @*<p class="lebels">Type of Product :</p>*@
                            </td>
                            <td style="padding-left: 3em;">
                                @*<p>@Model.ProductType</p>*@
                            </td>
                        </tr>
                    </table>
                </td>


                <td class="col col-xs-12 col-sm-12 col-md-6" style="padding:2em 0 2em 2em">
                    <table>

                        <tr>
                            <td>
                                <div class="lebels form-group">
                                    Price
                                </div>
                            </td>
                            <td style="padding-left: 3em;" class="form-group">
                                <div class="form-group">
                                    @Model.Price
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td style="width: 24%">
                                @*<p class="lebels">Description :</p>*@
                            </td>
                            <td style="padding-left: 0.5em; ">
                                @*<p>@Model.Description </p>*@
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
</body>

</html>

